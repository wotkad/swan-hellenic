              use(xlink:href="#svg-question-mark")
            .sidebar__tip If you are interested in more than one cabin, or are looking for child fares, please call <a href="tel:+49 (0) 211 13 866 123">+49 (0) 211 13 866 123</a>
        .sidebar__labels
          label.sidebar__label
