            span 1
          label.sidebar__label
            input(type="radio" name="guest" value="2")
            span 2
          label.sidebar__label
            input(type="radio" name="guest" value="3+")
            span 3+
      .sidebar__block
        .sidebar__subtitle
          span Cruise types
        .sidebar__select.sidebar__select-types
          .sidebar__select__header
            .sidebar__select__scroller
              .sidebar__select__values
                .sidebar__select__value
                  input(type="text" name="cruise")
                  span Choose cruise types
            .sidebar__select__arrow
              svg(viewBox="0 0 16 16" width="16px" height="16px")
                use(xlink:href="#svg-arrow-down-small")
          .sidebar__select__list
