include ../../mixins/button

.popup.popup-contacts(data-popup="contacts")
  .popup__bg
  .popup__wrapper
    .popup__close
      button.popup__icon(type="button" aria-label="close")
        svg(viewBox="0 0 24 24" width="36px" height="36px")
          use(xlink:href="#svg-arrow-right")
    .popup__container
      .popup__heading
        h2.popup__title Contact Us
        p.popup__description Whatever you need, we are here to satisfy your curious expedition mind whilst giving you the best experience possible. Simply complete the form below and one of our expedition specialists will come back to you shortly.
      form.popup__form(action="#")
        .popup__labels
          label.popup__label
            input(type="radio" name="contact_type" value="phone" checked)
            span Phone
          label.popup__label
            input(type="radio" name="contact_type" value="email")
            span E-mail
        .popup__inputs
          .popup__input
            input(type="text" name="name" required placeholder="First Name *")
          .popup__input
            input(type="text" name="submenu" required placeholder="Last Name *")
          .popup__input
            .popup__dropdown
              button(type="button").popup__dropdown__current
                svg.popup__dropdown__flag(viewBox="0 0 28 20" width="24px" height="24px")
                  use(xlink:href="#svg-flag-ru")
                svg.popup__arrow(viewBox="0 0 16 16" width="16px" height="16px")
                  use(xlink:href="#svg-arrow-down-small")
              .popup__dropdown__list
                button(type="button").popup__dropdown__country 
                  svg.popup__dropdown__flag(viewBox="0 0 28 20" width="24px" height="24px")
                    use(xlink:href="#svg-flag-ru")
                  span +7
                button(type="button").popup__dropdown__country 
                  svg.popup__dropdown__flag(viewBox="0 0 28 20" width="24px" height="24px")
                    use(xlink:href="#svg-flag-ge")
                  span +995
                button(type="button").popup__dropdown__country 
                  svg.popup__dropdown__flag(viewBox="0 0 28 20" width="24px" height="24px")
                    use(xlink:href="#svg-flag-ru")
                  span +7
                button(type="button").popup__dropdown__country 
                  svg.popup__dropdown__flag(viewBox="0 0 28 20" width="24px" height="24px")
                    use(xlink:href="#svg-flag-ge")
                  span +995
                button(type="button").popup__dropdown__country 
                  svg.popup__dropdown__flag(viewBox="0 0 28 20" width="24px" height="24px")
                    use(xlink:href="#svg-flag-ru")
                  span +7
            input(type="tel" name="phone" required placeholder="+7")
          .popup__input.popup__input-full
            textarea(name="message" placeholder="Your message")
          .popup__button
            +button('button-green', 'submit', 'Submit')
          .popup__policy 
            span Fields with an asterisk (*) are required. By clicking “SUBMIT”, you are agreeing to our <a href="#">privacy policy</a>