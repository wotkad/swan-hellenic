include ../../mixins/button
.popup.popup-select(data-popup="select")
  input.popup-select__selected(type="text" name="suite_number" data-deck="" data-suite-type="" data-suiteroom="" data-price="")
  .popup__wrapper
    .popup__close
      button.popup__icon(type="button" aria-label="close")
        svg(viewBox="0 0 24 24" width="36px" height="36px")
          use(xlink:href="#svg-arrow-right")
    .popup__close-mob
      button.popup__icon(type="button" aria-label="close")
        svg(viewBox="0 0 24 24" width="24px" height="24px")
          use(xlink:href="#svg-x-mark")
    .popup__container
      .popup-select__header
        .popup-select__heading
          h3.popup-select__title Select <br> a stateroom
          .popup-select__decks
            .popup-select__deck(data-deck="deck_4") Deсk 4
            .popup-select__deck(data-deck="deck_5").active Deсk 5
            .popup-select__deck(data-deck="deck_6") Deсk 6
        .popup-select__container
          .popup-select__types(data-types="deck_4")
            .popup-select__type.popup-select__type-balcony(data-type="balcony")
              svg(viewBox="0 0 24 24" width="24px" height="24px")
                use(xlink:href="#svg-check")
              p Balcony D6
              span € 19,859
            .popup-select__type.popup-select__type-unavalible
              svg(viewBox="0 0 24 24" width="24px" height="24px")
                use(xlink:href="#svg-check")
              p Unavailable <br> stateroom
          .popup-select__types(data-types="deck_5").active
            .popup-select__type.popup-select__type-balcony(data-type="balcony")
              svg(viewBox="0 0 24 24" width="24px" height="24px")
                use(xlink:href="#svg-check")
              p Balcony D6
              span € 19,859
            .popup-select__type.popup-select__type-premium(data-type="premium")
              svg(viewBox="0 0 24 24" width="24px" height="24px")
                use(xlink:href="#svg-check")
              p Premium Suite
              span € 27,619
            .popup-select__type.popup-select__type-unavalible
              svg(viewBox="0 0 24 24" width="24px" height="24px")
                use(xlink:href="#svg-check")
              p Unavailable <br> stateroom
          .popup-select__types(data-types="deck_6")
            .popup-select__type.popup-select__type-balcony(data-type="balcony")
              svg(viewBox="0 0 24 24" width="24px" height="24px")
                use(xlink:href="#svg-check")
              p Balcony D6
              span € 19,859
            .popup-select__type.popup-select__type-premium(data-type="premium")
              svg(viewBox="0 0 24 24" width="24px" height="24px")
                use(xlink:href="#svg-check")
              p Premium Suite
              span € 27,619
            .popup-select__type.popup-select__type-suite(data-type="suite")
              svg(viewBox="0 0 24 24" width="24px" height="24px")
                use(xlink:href="#svg-check")
              p Suite
              span € 23,424
            .popup-select__type.popup-select__type-unavalible
              svg(viewBox="0 0 24 24" width="24px" height="24px")
                use(xlink:href="#svg-check")
              p Unavailable <br> stateroom
      .popup-select__suites
        .popup-select__ship(data-ship="deck_4")
          include deck_5.svg
        .popup-select__ship.active(data-ship="deck_5")
          include deck_5.svg
        .popup-select__ship(data-ship="deck_6")
          include deck_5.svg
      .popup-select__info
        h4.popup-select__subtitle SELECTED PREFERENCE
        .popup-select__summary
          .popup-select__preferences
            .popup-select__preference
              p Deck
              span -
            .popup-select__preference
              p Type
              span -
            .popup-select__preference
              p Stateroom
              span -
            .popup-select__preference
              p Price
              span -
          +button('button-brown button-no-center button-disabled popup-select__button', 'button', 'Select', '' ,'', '', '', '')
