.popup.popup-privacy-policy(data-popup="privacy-policy")
  .popup__wrapper
    .popup__close
      button.popup__icon(type="button" aria-label="close")
        svg(viewBox="0 0 24 24" width="36px" height="36px")
          use(xlink:href="#svg-arrow-right")
    .popup__close-mob
      button.popup__icon(type="button" aria-label="close")
        svg(viewBox="0 0 24 24" width="24px" height="24px")
          use(xlink:href="#svg-x-mark")
    .popup__container
      a.privacy-policy__link.active(href="#independent-data-controllers")
        svg.privacy-policy__link__icon(
          viewBox="0 0 24 24"
          width="24px"
          height="24px"
        )
          use(xlink:href="#svg-selected")
        span Independent Data controllers
      a.privacy-policy__link(href="#personal-data-categories")
        svg.privacy-policy__link__icon(
          viewBox="0 0 24 24"
          width="24px"
          height="24px"
        )
          use(xlink:href="#svg-selected")
        span Personal Data Categories
      a.privacy-policy__link(href="#legal-basis-of-data-processing")
        svg.privacy-policy__link__icon(
          viewBox="0 0 24 24"
          width="24px"
          height="24px"
        )
          use(xlink:href="#svg-selected")
        span Legal basis of data processing
      a.privacy-policy__link(href="#method-of-data-processing")
        svg.privacy-policy__link__icon(
          viewBox="0 0 24 24"
          width="24px"
          height="24px"
        )
          use(xlink:href="#svg-selected")
        span Method of data processing
      a.privacy-policy__link(href="#diffusion-of-personal-data")
        svg.privacy-policy__link__icon(
          viewBox="0 0 24 24"
          width="24px"
          height="24px"
        )
          use(xlink:href="#svg-selected")
        span Diffusion of personal data
      a.privacy-policy__link(href="#non-eu-countries-data-transfer")
        svg.privacy-policy__link__icon(
          viewBox="0 0 24 24"
          width="24px"
          height="24px"
        )
          use(xlink:href="#svg-selected")
        span Non-EU countries data transfer
      a.privacy-policy__link(href="#data-retention-period")
