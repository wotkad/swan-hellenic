.popup.popup-faq(data-popup="faq")
  .popup__wrapper
    .popup__close
      button.popup__icon(type="button" aria-label="close")
        svg(viewBox="0 0 24 24" width="36px" height="36px")
          use(xlink:href="#svg-arrow-right")
    .popup__close-mob
      button.popup__icon(type="button" aria-label="close")
        svg(viewBox="0 0 24 24" width="24px" height="24px")
          use(xlink:href="#svg-x-mark")
    .popup__container
      a.faq__link.active(href="#planning")
        svg.faq__link__icon(viewBox="0 0 24 24" width="24px" height="24px")
          use(xlink:href="#svg-selected")
        span Planning
      a.faq__link(href="#antarctica-cruises")
        svg.faq__link__icon(viewBox="0 0 24 24" width="24px" height="24px")
          use(xlink:href="#svg-selected")
        span Antarctica cruises
      a.faq__link(href="#arctic-cruises")
        svg.faq__link__icon(viewBox="0 0 24 24" width="24px" height="24px")
          use(xlink:href="#svg-selected")
        span Arctic cruises
      a.faq__link(href="#before-you-go")
        svg.faq__link__icon(viewBox="0 0 24 24" width="24px" height="24px")
          use(xlink:href="#svg-selected")
        span Before you go
      a.faq__link(href="#life-onboard")
        svg.faq__link__icon(viewBox="0 0 24 24" width="24px" height="24px")
          use(xlink:href="#svg-selected")
        span Life Onboard