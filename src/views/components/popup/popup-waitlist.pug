include ../../mixins/button
.popup.popup-waitlist(data-popup="waitlist")
  .popup__wrapper
    .popup__close
      button.popup__icon(type="button" aria-label="close")
        svg(viewBox="0 0 24 24" width="36px" height="36px")
          use(xlink:href="#svg-arrow-right")
    .popup__close-mob
      button.popup__icon(type="button" aria-label="close")
        svg(viewBox="0 0 24 24" width="24px" height="24px")
          use(xlink:href="#svg-x-mark")
    .popup__container
      .popup__heading
        h2.popup__title.popup__title-small Add to waiting list
      form.popup__form(action="#")
        .popup__inputs
          .popup__input(data-input="email")
            input(
              type="email"
              placeholder="E-mail *"
              autocomplete="on"
              name="email"
            )
          .popup__input.popup__input-phone.active(data-input="phone")
            .popup__dropdown
              button.popup__dropdown__current(
                type="button"
                aria-label="country"
              )
                svg.popup__dropdown__flag(
                  viewBox="0 0 28 20"
                  width="24px"
                  height="24px"
                )
                  use(xlink:href="#svg-flag-ru")
                svg.popup__arrow(
                  viewBox="0 0 16 16"
                  width="16px"
                  height="16px"
                )
                  use(xlink:href="#svg-arrow-down-small")
              .popup__dropdown__container
                .popup__dropdown__search
                  input.popup__dropdown__input(
                    type="search"
                    placeholder="Search..."
                    name="seatch"
                    required
                  )
                  button.popup__dropdown__submit(type="submit")
                    svg(viewBox="0 0 24 24" width="24px" height="24px")
                      use(xlink:href="#svg-search")
                .popup__dropdown__list(data-scroll-lock-scrollable).custom-scroll
                  button.popup__dropdown__country(
                    type="button"
                    aria-label="country"
                  )
                    svg.popup__dropdown__flag(
                      viewBox="0 0 28 20"
                      width="24px"
                      height="24px"
                    )
                      use(xlink:href="#svg-flag-ru")
                    span Russian (+7)
                    svg.popup__dropdown__check(
                      viewBox="0 0 12 12"
                      width="12px"
                      height="12px"
                    )
                      use(xlink:href="#svg-check-small-green")
                  button.popup__dropdown__country(
                    type="button"
                    aria-label="country"
