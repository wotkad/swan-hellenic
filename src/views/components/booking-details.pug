.booking-details
  .booking-details__subtitle Guest 1
  h3.booking-details__title Contact details
  form.booking-details__form(action="#")
  .booking-details__inputs.booking-details__inputs-mt
    .booking-details__input
      input.success(
        type="text"
        placeholder="First Name (as it appears in passport) *"
        autocomplete="on"
        name="name"
      )
      svg.svg__check(viewBox="0 0 12 12" width="12px" height="12px")
        use(xlink:href="#svg-check-small-green")
    .booking-details__input
      input.error(
        type="text"
        placeholder="Last Name (as it appears in passport) *"
        autocomplete="on"
        class=""
        name="surname"
      )
      svg.svg__check(viewBox="0 0 12 12" width="12px" height="12px")
        use(xlink:href="#svg-check-small-green")
    .booking-details__input
      input(
        type="text"
        placeholder="Middle name"
        autocomplete="on"
        name="surname"
      )
      svg.svg__check(viewBox="0 0 12 12" width="12px" height="12px")
        use(xlink:href="#svg-check-small-green")
    .booking-details__input.booking-details__input-icon
      svg.booking-details__calendar(
        viewBox="0 0 24 24"
        width="24px"
        height="24px"
      )
        use(xlink:href="#svg-calendar")
      input(
        type="text"
        placeholder="Date of Birth"
        autocomplete="on"
        max="2999-12-31"
        name="name"
        onfocus="(this.type='date')"
      )
      svg.svg__check(viewBox="0 0 12 12" width="12px" height="12px")
        use(xlink:href="#svg-check-small-green")
  .booking-details__inputs.booking-details__inputs-small.booking-details__inputs-grid
    .booking-details__input.booking-details__input-mt.booking-details__input-email
      input(type="email" placeholder="E-mail *" autocomplete="on" name="email")
    .booking-details__input.popup__input.popup__input-phone
      .popup__dropdown
        button.popup__dropdown__current(type="button" aria-label="country")
          svg.popup__dropdown__flag(
            viewBox="0 0 28 20"
            width="24px"
            height="24px"
          )
            use(xlink:href="#svg-flag-ru")
          svg.popup__arrow(viewBox="0 0 16 16" width="16px" height="16px")
            use(xlink:href="#svg-arrow-down-small")
        .popup__dropdown__list
          button.popup__dropdown__country(type="button" aria-label="country")
            svg.popup__dropdown__flag(
              viewBox="0 0 28 20"
              width="24px"
              height="24px"
            )
              use(xlink:href="#svg-flag-ru")
            span +7
          button.popup__dropdown__country(type="button" aria-label="country")
            svg.popup__dropdown__flag(
              viewBox="0 0 28 20"
              width="24px"
              height="24px"
            )
              use(xlink:href="#svg-flag-ge")
            span +995
          button.popup__dropdown__country(type="button" aria-label="country")
            svg.popup__dropdown__flag(
              viewBox="0 0 28 20"
              width="24px"
              height="24px"
            )
              use(xlink:href="#svg-flag-ru")
            span +7
          button.popup__dropdown__country(type="button" aria-label="country")
            svg.popup__dropdown__flag(
              viewBox="0 0 28 20"
              width="24px"
              height="24px"
            )
              use(xlink:href="#svg-flag-ge")
            span +995
          button.popup__dropdown__country(type="button" aria-label="country")
            svg.popup__dropdown__flag(
              viewBox="0 0 28 20"
              width="24px"
              height="24px"
            )
              use(xlink:href="#svg-flag-ru")
            span +7
      input(type="tel" placeholder="+7 *" autocomplete="on" name="phone")
    .booking-details__note Booking enquiry details will be sent to this e-mail address
    .booking-details__note We will shortly contact you via this phone number
  h3.booking-details__title.booking-details__title-mt Postal address
