                      )
                        use(xlink:href="#svg-check-small-green")
                    button.popup__dropdown__country(
                      type="button"
                      aria-label="country"
                    )
                      svg.popup__dropdown__flag(
                        viewBox="0 0 28 20"
                        width="24px"
                        height="24px"
                      )
                        use(xlink:href="#svg-flag-ru")
                      span Russian (+7)
                      svg.popup__dropdown__check(
                        viewBox="0 0 12 12"
                        width="12px"
                        height="12px"
                      )
                        use(xlink:href="#svg-check-small-green")
              input(
                type="tel"
                placeholder="+7 *"
                autocomplete="on"
                name="phone"
              )
            if popupType == 'contacts'
              .popup__input.popup__input-email(data-input="email")
                input(
                  type="email"
                  placeholder="E-mail *"
                  autocomplete="on"
                  name="email"
                )
            .popup__input.popup__input-full
              textarea.custom-scroll(placeholder="Your message" name="message")
            .popup__button
              +button('button-green', 'submit', 'Submit', '', '')
            .popup__policy
              span Fields with an asterisk (*) are required. By clicking “SUBMIT”, you are agreeing to our <a href="#">privacy policy</a>