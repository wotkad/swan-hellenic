mixin hero(className='', isCruise, title, description, isFilter, page)
  section.hero(class="" + className)
    if page == 'index'
      .hero__images.splide
        .splide__track
          .splide__list
            .splide__slide
              img(src="/assets/images/hero.png" alt="hero" loading="lazy")
            .splide__slide
              img(src="/assets/images/hero-2.png" alt="hero-2" loading="lazy")
            .splide__slide
              img(src="/assets/images/hero.png" alt="hero" loading="lazy")
            .splide__slide
              img(src="/assets/images/hero-2.png" alt="hero-2" loading="lazy")
    if page == 'cruise-page'
      .hero__images.splide
        .splide__track
          .splide__list
            .splide__slide
              img(src="/assets/images/hero-2.png" alt="hero-2" loading="lazy")
            .splide__slide
              img(src="/assets/images/hero.png" alt="hero" loading="lazy")
            .splide__slide
              img(src="/assets/images/hero-2.png" alt="hero-2" loading="lazy")
            .splide__slide
              img(src="/assets/images/hero.png" alt="hero" loading="lazy")
    else if page == 'destination'
      .hero__images
        .hero__image
          img(src="/assets/images/destination.png" alt="hero" loading="lazy")
    else if page == 'about'
      .hero__images
        .hero__image
          img(src="/assets/images/about.png" alt="hero" loading="lazy")
    else if page == 'what-to-expect'
      .hero__images
        .hero__image
          img(
            src="/assets/images/what-to-expect.png"
            alt="hero"
            loading="lazy"
          )
    else if page == 'ship'
      .hero__images
        .hero__image
          img(src="/assets/images/destination.png" alt="hero" loading="lazy")
    .hero__wrapper
      .wrapper
        if isFilter == 'filter'
          h1.hero__title.absolute Heading
          .hero__content.splide
            .splide__track
